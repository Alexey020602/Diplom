@using Client.Shared.Buttons
@typeparam TItem where TItem : class

<div>
    <RadzenTemplateForm TItem=@TItem Data="@Item" Submit=@(_ => OnValueSubmit())>
        <RadzenStack Orientation=@Orientation.Vertical>
            @Content
            <RadzenStack Orientation=@Orientation.Horizontal JustifyContent=@JustifyContent.SpaceBetween>
                <BackButton ButtonStyle=@ButtonStyle.Secondary Text="Назад"/>
                <RadzenButton ButtonType=@ButtonType.Reset Text="Очистить"/>
                <RadzenButton ButtonType=@ButtonType.Submit Text="Сохранить"/>
            </RadzenStack >
        </RadzenStack>
    </RadzenTemplateForm>
</div>

@code {
    protected RenderFragment FormRow(
        string labelText,
        string name,
        RenderFragment formComponent
    ) => @<RadzenRow AlignItems="AlignItems.Center">
             <RadzenColumn>
                 <RadzenLabel Component=@name Text=@labelText/>
             </RadzenColumn>
             <RadzenColumn>
                 @formComponent
                 <RadzenDataAnnotationValidator Component=@name/>
             </RadzenColumn>
         </RadzenRow>;
}