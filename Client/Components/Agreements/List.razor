@using Shared.List;
@using Client.Shared.Select
@using AgreementType = Model.Agreements.Type
@using AgreementStatus = Model.Agreements.Status

@page "/agreements"
@inherits SearchableStyledList<Model.Agreements.AgreementShort>

@{
    base.BuildRenderTree(__builder);
}

@code {
    protected override RenderFragment Filters =>@<div>
        @TypeFilter
        @StatusFilter
    </div>;

    private RenderFragment TypeFilter => @<UniversalCustomSelect 
    TItem=@AgreementType 
    GetStringIdentifier=@(type => type.Id.ToString())
    SelectedItem=@agreementType 
    SelectedItemChanged=@Select />;

    private RenderFragment StatusFilter => @<UniversalCustomSelect
    TItem=@AgreementStatus 
    GetStringIdentifier=@(status => status.Id.ToString())
    SelectedItem=@agreementStatus
    SelectedItemChanged=@Select />;
}
