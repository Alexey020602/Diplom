    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    protected override RenderFragment Filters => @<UniversalCustomSelect 
    TItem=Faculty 
    @bind-SelectedItem:get=@facultyFilterValue 
    @bind-SelectedItem:set=@SelectFaculty
    GetStringIdentifier=@(faculty => faculty.Id.ToString())/>;
}